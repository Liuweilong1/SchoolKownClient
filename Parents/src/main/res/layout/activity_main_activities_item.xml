<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_margin="10dp"
        android:background="@drawable/edit_circle_shape">
        <com.example.schoolkownclient.Entities.RoundImageView
            android:id="@+id/iv_activity"
            android:layout_width="120dp"
            android:layout_height="130dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            app:rect_adius="10"
            android:layout_marginLeft="5dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_activity">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="暑假已到，跟同学们一起逛馆，你还等什么"
                android:textColor="#000000" />
            <TextView
                android:id="@+id/tv_time_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="举办时间："
                android:textSize="15sp"
                android:layout_below="@id/tv_title"/>
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_time_txt"
                android:text="2019/12/01-2019/12/15"
                android:layout_marginTop="5dp"
                android:layout_below="@id/tv_title"
                android:textSize="15sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_type"
                    android:layout_width="24dp"
                    android:src="@drawable/head"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical" />
                <TextView
                    android:id="@+id/tv_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已参加"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/colorAccent"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>