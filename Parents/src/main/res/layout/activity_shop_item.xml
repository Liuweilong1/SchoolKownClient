<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:id="@+id/Re_shop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_return"
            android:src="@drawable/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:text="积分商城"
            android:textSize="40dp"/>

        <ImageView
            android:id="@+id/img_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/share"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/img_shop"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/share"
        android:layout_below="@id/Re_shop"
        android:layout_centerHorizontal="true"/>
    <RelativeLayout
        android:id="@+id/Re_introduction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_shop">
        <TextView
            android:id="@+id/tv_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4500积分"
            android:textSize="50dp"
            android:textColor="#FF0000"/>
        <TextView
            android:id="@+id/tv_goods"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_num"
            android:text="商品名称"
            android:textSize="30dp"
            android:textColor="#ff000000"/>
        <TextView
            android:id="@+id/tv_scoring"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_goods"
            android:text="商品介绍"
            android:textSize="20sp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/Re_datailed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Re_introduction">
        <RelativeLayout
            android:id="@+id/Re_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="说明："
                android:textSize="20sp"/>
            <ImageView
                android:id="@+id/img_bingo"
                android:layout_toRightOf="@+id/tv_show"
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:src="@drawable/bingo"/>
            <TextView
                android:id="@+id/tv_show1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="假一赔十"
                android:layout_toRightOf="@+id/img_bingo"
                android:textSize="20sp"/>
            <ImageView
                android:id="@+id/img_bingo1"
                android:layout_toRightOf="@+id/tv_show1"
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:src="@drawable/bingo"/>
            <TextView
                android:id="@+id/tv_show2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7天无忧退货"
                android:layout_toRightOf="@+id/img_bingo1"
                android:textSize="20sp"/>
            <ImageView
                android:id="@+id/img_bingo2"
                android:layout_toRightOf="@+id/tv_show2"
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:src="@drawable/bingo"/>
            <TextView
                android:id="@+id/tv_show3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="本仓发货"
                android:layout_toRightOf="@+id/img_bingo2"
                android:textSize="20sp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/Re_made"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Re_show">
            <TextView
                android:id="@+id/tv_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已选"
                android:textSize="25sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:text="L号"
                android:textSize="25sp"
                android:textColor="#ff000000"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/down"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/Re_made1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Re_made">
            <TextView
                android:id="@+id/tv_select1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="配送"
                android:textSize="25sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:text="包邮"
                android:textSize="25sp"
                android:textColor="#ff000000"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/down"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <Button
        android:id="@+id/duihuan"
        android:onClick="onclicked"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="兑换商品"
        android:textSize="30dp"
        android:background="#E6E6FA"
        android:textColor="#DA70D6"/>

</RelativeLayout>