<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#6f79ff">
        <ImageView
            android:id="@+id/mine_back_student"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="学生信息"
            android:textColor="#FFFFFF"
            android:textSize="25sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="403dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <View
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:background="@color/colorMainDark"/>
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/edit_color_mine">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="40dp"
                android:textColor="@color/colorMainDark"
                android:textSize="20dp"
                android:text="学生学校"/>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:background="@color/colorMainDark"/>
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/edit_color_mine">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="40dp"
                android:textColor="@color/colorMainDark"
                android:textSize="20dp"
                android:text="学生班级"/>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:background="@color/colorMainDark"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="403dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <View
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:background="@color/colorMainDark"/>
        <Spinner
            android:id="@+id/city"
            android:prompt="@string/school_label"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:entries="@array/school_name"
        />
        <View
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:background="@color/colorMainDark"/>
        <Spinner
            android:id="@+id/area"
            android:prompt="@string/class_label"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:entries="@array/class_name"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:background="@color/colorMainDark"/>

    </LinearLayout>

</LinearLayout>