<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <com.example.schoolkownclient.Entities.RoundImageView
            android:id="@+id/gridview_item_img"
            android:layout_width="180dp"
            android:layout_height="140dp"
            app:rect_adius="10"
            android:scaleType="fitCenter"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/gridview_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="外教儿歌"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_below="@id/gridview_item_img"
            android:layout_alignLeft="@id/gridview_item_img"
            android:layout_marginTop="3dp"/>
        <TextView
            android:id="@+id/gridview_item_introduction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/gridview_item_title"
            android:text="英语儿歌启蒙"
            android:textSize="12sp"
            android:layout_alignLeft="@id/gridview_item_title"
            android:layout_marginTop="5dp"/>
    </RelativeLayout>
</LinearLayout>