<?xml version="1.0" encoding="utf-8"?>
<com.mcxtzhang.swipemenulib.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/swipmenulayoutmessage">
    <LinearLayout
        android:id="@+id/messageliear"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/mymesimg"
            android:layout_marginLeft="20dp"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/mynotification"/>
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/mymestitle"
                android:layout_marginTop="10dp"
                android:paddingLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="30sp"
                android:text="5555"/>
            <TextView
                android:id="@+id/mymescontent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="55"
                android:textSize="25sp"
                android:paddingLeft="20dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/mymestime"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="事件"
            android:gravity="center"/>
    </LinearLayout>
    <Button
        android:id="@+id/tv_mes_delete"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:background="#000000"
        android:padding="5dp"
        android:text="删除"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

</com.mcxtzhang.swipemenulib.SwipeMenuLayout>
