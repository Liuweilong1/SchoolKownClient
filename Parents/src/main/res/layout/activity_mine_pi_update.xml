<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#6f79ff">
        <ImageView
            android:id="@+id/mine_back_personinformation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="个人信息"
            android:textColor="#FFFFFF"
            android:textSize="25sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="380dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:background="#ffffff">
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="80dp"
            android:background="@drawable/edit_circle_shape">

            <TextView
                android:text="头像"
                android:textSize="20dp"
                android:textColor="@color/colorMain"
                android:layout_marginLeft="12dp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <ImageView
                android:layout_marginLeft="30dp"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:src="@drawable/logo"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="100dp"
                android:text="上传头像"
                android:textColor="@color/colorWhite"
                android:background="@color/colorMainLight"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="60dp"
            android:background="@drawable/edit_circle_shape">

            <TextView
                android:text="昵称"
                android:textSize="20dp"
                android:textColor="@color/colorMain"
                android:layout_marginLeft="12dp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <EditText
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:hint="昵称"
                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/colorMainLight"/>

    <LinearLayout
        android:layout_width="380dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:background="#ffffff">
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="60dp"
            android:background="@drawable/edit_circle_shape">

            <TextView
                android:text="真实姓名"
                android:textSize="20dp"
                android:textColor="@color/colorMain"
                android:layout_marginLeft="12dp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <EditText
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:hint="李校晓"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="60dp"
            android:background="@drawable/edit_circle_shape">

            <TextView
                android:text="性别"
                android:textSize="20dp"
                android:textColor="@color/colorMain"
                android:layout_marginLeft="12dp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <EditText
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:hint="女"
                />
        </LinearLayout>



        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="60dp"
            android:background="@drawable/edit_circle_shape">

            <TextView
                android:text="手机号"
                android:textSize="20dp"
                android:textColor="@color/colorMain"
                android:layout_marginLeft="12dp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <EditText
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:hint="1234567890"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="60dp"
            android:background="@drawable/edit_circle_shape">

            <TextView
                android:text="邮箱"
                android:textSize="20dp"
                android:textColor="@color/colorMain"
                android:layout_marginLeft="12dp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <EditText
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:hint="1234567890@xiaoxiao.com"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <Button
            android:id="@+id/login_btn_enter"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:text="修改完成"
            android:layout_below="@id/login_pwd"
            android:background="@drawable/btn_circle_shape"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
</LinearLayout>