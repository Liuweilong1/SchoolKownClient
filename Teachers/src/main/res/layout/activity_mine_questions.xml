<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#6f79ff">
        <ImageView
            android:id="@+id/mine_back_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="常见问题"
            android:textColor="#FFFFFF"
            android:textSize="25sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="问题和意见"
            android:textSize="20dp"
            android:textColor="@color/colorMainDark" />
        <EditText
            android:layout_width="370dp"
            android:layout_height="150dp"
            android:maxLines="5"
            android:minLines="5"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:hint="如您对校晓存在问题，欢迎反馈"
            android:background="@drawable/edit_circle_shape"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系电话"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorMainDark" />
        <EditText
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:hint="输入电话号码"
            android:background="@drawable/edit_circle_shape"/>
        <Button
            android:id="@+id/login_btn_enter"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:text="提交反馈"
            android:background="@drawable/btn_circle_shape"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="20dp"/>

    </LinearLayout>
</LinearLayout>