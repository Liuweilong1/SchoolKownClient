<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <TextView
        android:id="@+id/forget_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="返回登录"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="20sp"/>
    <ImageView
        android:id="@+id/login_logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/logo"
        android:layout_below="@id/forget_close"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"/>
    <EditText
        android:id="@+id/forget_tel"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:hint="请输入手机号"
        android:inputType="text"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/login_logo"
        android:layout_marginTop="30dp"
        android:background="@drawable/edit_circle_shape"/>
    <EditText
        android:id="@+id/forget_code"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:hint="请输入验证码"
        android:layout_marginLeft="30dp"
        android:inputType="numberPassword"
        android:layout_marginTop="20dp"
        android:layout_below="@id/forget_tel"
        android:background="@drawable/edit_circle_shape"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/forget_tel"
        android:text="获取验证码"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/forget_code"
        android:background="@drawable/edit_circle_shape"/>
    <EditText
        android:id="@+id/forget_reset_pwd"
        android:layout_width="360dp"
        android:hint="请重新输入密码"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/forget_code"
        android:background="@drawable/edit_circle_shape"/>
    <Button
        android:id="@+id/forget_finish"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:text="完成"
        android:layout_below="@id/forget_reset_pwd"
        android:background="@drawable/btn_circle_shape"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="20dp"/>

</RelativeLayout>
