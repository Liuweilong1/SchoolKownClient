<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/item_comment_head"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/head"/>
        <TextView
            android:id="@+id/item_comment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户昵称"
            android:layout_toRightOf="@id/item_comment_head"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/item_comment_context"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这是一个评论..."
            android:textSize="18sp"
            android:layout_below="@id/item_comment_name"
            android:layout_toRightOf="@id/item_comment_head"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/item_comment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2020/11/09 12:39"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dp"/>
    </RelativeLayout>
</LinearLayout>